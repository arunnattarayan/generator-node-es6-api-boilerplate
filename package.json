{
  "name": "generator-node-api-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate and tooling for authoring data API backends with Node.js, JWT and MongoDB. It is best suited for developing a es6/type script API endpoint as a standalone (micro)service (demo), backing up web front-ends and/or mobile apps",
  "homepage": "https://generator-node-es6-api-boilerplate.readthedocs.io/en/latest/#express-app-generator",
  "author": {
    "name": "Arun Nattarayan",
    "email": "arunkumarit02@gmail.com"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "yeoman-generator",
    "babel",
    "es6",
    "nodejs",
    "node",
    "api",
    "jwt",
    "MongoDB",
    "Mongoose",
    "Docker",
    "Swagger API Doc",
    "type script",
    "Type Script",
    "TypeScript"
  ],
  "devDependencies": {
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.12.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.2.0",
    "jest": "^23.5.0",
    "lint-staged": "^13.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "prettier": "^1.15.2",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "engines": {
    "npm": ">= 8.0.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "mkdirp": "^0.5.1",
    "slugg": "^1.2.1",
    "yeoman-generator": "^3.2.0",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest ./__tests__/"
  },
  "repository": "arunnattarayan/generator-node-es6-api-boilerplate",
  "license": "Apache-2.0"
}
